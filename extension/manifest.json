{
  "short_name": "jsonexp",
  "name": "JSON Explorer",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "favicon.ico",
    "24": "favicon.ico",
    "32": "favicon.ico",
    "64": "favicon.ico",
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "action": {
    "default_icon": "logo192.png"
  },
  "permissions": [
    "webRequest",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*",
    "<all_urls>"
  ],
  "offline_enabled": true,
  "background": {
    "service_worker": "backend.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "explorer/*"
      ],
      "matches": [
        "*://*/*",
        "<all_urls>"
      ]
    }
  ]
}